doctype
html.no-js
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title Images!
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='css/vendor.css')

    style.
      .thumb{
        width: 150px; 
        margin: 10px;
        display: inline-block;
        position: relative;
        overflow: hidden;
      }

      .name{
        position: absolute;
        bottom: 0;
        left: 0;
        background: #19198c;
        color: white;
        font-size: 13px;
        display: block;
        width: 100%;
        padding: 5px;
        text-align: center;
        font-family: sans-serif;
        text-decoration: none;
        font-weight: 300;
      }

  body
    
    div.container

      for image in images
        a(href=image.images.standard_resolution.url target="_blank")
          div.thumb
            img(src=image.images.thumbnail.url)
            a(target="_blank" href="https://instagram.com/#{image.user.username}" class="name")=image.user.username

      

    script(data-main='js/main' src='/js/vendor/require.js')